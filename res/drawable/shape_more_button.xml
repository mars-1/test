<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="#ffd3d3d3" />
            <solid android:color="@color/white" />
            <gradient android:startColor="#ffffffff" android:endColor="#ffededed" android:angle="90.0" android:type="linear" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="#ffd3d3d3" />
            <solid android:color="@color/white" />
            <gradient android:startColor="#ffffffff" android:endColor="#ffededed" android:angle="90.0" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="#ffd3d3d3" />
            <solid android:color="@color/white" />
            <gradient android:startColor="#ffededed" android:endColor="#ffffffff" android:angle="90.0" android:type="linear" />
        </shape>
    </item>
</selector>