<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@id/tv_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/common_title_tips" style="@style/DialogStyle_Title_Text" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <FrameLayout android:id="@id/fl_content" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" />
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@id/linearlayout_bottom_btn" android:background="@drawable/shape_cir_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:id="@id/btn_confirm" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/common_confirm" android:layout_weight="1.0" style="@style/DialogStyle_Button" />
            <Button android:id="@id/btn_cancel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/common_cancel" android:layout_weight="1.0" style="@style/DialogStyle_Button" />
            <Button android:id="@id/btn_demo" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/common_cancel" android:layout_weight="1.0" style="@style/DialogStyle_Button" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>