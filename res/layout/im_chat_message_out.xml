<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_gravity="right" android:id="@id/message_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="data" />
    <LinearLayout android:layout_gravity="right" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@id/message_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/msg_state_failed" />
        <FrameLayout android:background="@drawable/message_out" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@id/layout_text" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Button android:id="@id/message_voice" android:background="@drawable/chat_voice_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:id="@id/message_text" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout android:layout_gravity="center" android:id="@id/layout_image" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@id/message_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/head_image" />
                <ProgressBar android:id="@id/message_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@android:style/Widget.ProgressBar.Horizontal" />
            </RelativeLayout>
        </FrameLayout>
        <ImageView android:id="@id/message_head" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/head_image" />
    </LinearLayout>
</LinearLayout>